<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All accommodations</title>
  </head>
  <body>
    <h1>All accommodations</h1>
    <div>
      <a href="/accommodations/new">Add accommodation</a>
    </div>
    <ul>
      <% for(const accommodation of accommodations) { %>
      <li>
        <a href="/accommodations/<%= accommodation._id %>">
          <%= accommodation.title %>
        </a>
      </li>
      <% } %>
    </ul>
  </body>
</html>
