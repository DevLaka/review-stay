<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Accommodation</h1>
  <div class="col-6 offset-3">
    <form
      action="/accommodations/<%= accommodation._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="accommodation[title]"
          value="<%= accommodation.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Invalid input!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="accommodation[location]"
          value="<%= accommodation.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Invalid input!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="accommodation[image]"
          value="<%= accommodation.image %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Invalid input!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Accommodation Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="accommodation[price]"
            value="<%= accommodation.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Invalid input!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="accommodation[description]"
          required
        >
<%= accommodation.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Invalid input!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Accommodation</button>
      </div>
    </form>
    <a href="/accommodations/<%= accommodation._id %>">Back to accommodation</a>
  </div>
</div>
